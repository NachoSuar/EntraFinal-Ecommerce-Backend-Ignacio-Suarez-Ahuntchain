    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Confirmación de compra</title>
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: flex-start; /* Ajusta la alineación vertical */
                height: 100vh;
                margin: 0;
                font-family: Arial, sans-serif;
            }
            .container {
                text-align: center;
                margin-top: 50px; /* Ajusta el margen superior según sea necesario */
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>¡Compra realizada con éxito!</h1>
            <p>{{message}}</p>
            <h2>Detalles del ticket:</h2>
            <p>Monto total de la compra: <span id="totalAmountDisplay"></span></p>
            <p>Comprador: {{user.email}}</p>

            <a href="/" class="home-link" style="margin-top: 10px;">Volver al Inicio</a>
            <!-- Depuración adicional -->
            {{log this}}
        </div>
        <script>
            // Función para obtener el valor de una cookie por su nombre
            function getCookie(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop().split(';').shift();
            }

            // Obtener el monto total de la compra de la cookie y mostrarlo
            const totalAmount = getCookie('totalAmount');
            document.getElementById('totalAmountDisplay').innerText = `$${totalAmount}`;
        </script>
    </body>
    </html>



