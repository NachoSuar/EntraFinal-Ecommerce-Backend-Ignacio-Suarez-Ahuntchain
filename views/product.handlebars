<div style="text-align: center; max-width: 600px; margin: 0 auto;">
    <h1>{{title}}</h1>
    <p>{{description}}</p>

    {{#if photo}}
        <center><img src="/images/products/{{photo}}" style="max-width: 100%; height: auto;"/></center>
    {{/if}}

    {{#if isStock}}
        <p>Precio: {{price}}</p>
        <form id="addToCartForm" method="post" action="/carts/add" style="margin-top: 15px;">
            <input type="hidden" name="productId" id="productId" value="{{_id}}">
            <label for="quantity">Cantidad:</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1" required>
            <button type="submit" style="background-color: #4caf50; color: white; cursor: pointer; border: none;">Agregar al Carrito</button>
        </form>

    {{else}}
        <p>No hay stock del producto</p>
    {{/if}}

    <a href="/products" style="text-decoration: none; color: #333; display: block; margin-top: 15px;">
        <button style="background-color: #4285f4; color: white; cursor: pointer; border: none; padding: 8px 12px;">Volver a Productos</button>
    </a>
</div>

<script>
    document.getElementById('addToCartForm').addEventListener('submit', function(event) {
    const productId = document.getElementById('productId').value;

    if (!productId) {
        event.preventDefault();
        alert('Error: Selecciona un producto antes de agregar al carrito');
    }
});

</script>

